<button type="button" class="toggle btn btn-default btn-xs" data-toggle="tooltip" title="<% if(enabled) { %>Deaktivieren<% } else { %>Aktivieren<% } %>">
    <span class="glyphicon glyphicon-<% if(enabled) { %>pause<% } else { %>play<% } %>"></span>
</button>
<button type="button" class="edit btn btn-default btn-xs" data-toggle="tooltip" title="Bearbeiten">
    <span class="glyphicon glyphicon-pencil"></span>
</button>
<button type="button" class="remove btn btn-default btn-xs" data-toggle="tooltip" title="Entfernen">
    <span class="glyphicon glyphicon-remove"></span>
</button>